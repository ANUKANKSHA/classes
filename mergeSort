class mergeSort
{
    int array_size;
public:
    mergeSort(int x)
    {
        array_size=x;
    }
    merge(int arr[],int low,int mid,int high)
    {
        int l[mid-low+1];
        int r[high-mid];
        for(int p=0;p<mid-low+1;p++)
            l[p]=arr[low+p];
        for(int p=0;p<high-mid;p++)
            r[p]=arr[mid+1+p];
        int i=0,j=0,k=low;
        while(i<mid-low+1 && j<high-mid)
        {
            if(l[i]<=r[j])
            {
                arr[k]=l[i];
                i++;
            }
            else
            {
                arr[k]=r[j];
                j++;
            }
            k++;
        }
        while(i<mid-low+1)
        {
            arr[k]=l[i];
                i++;
                k++;
        }
        while(j<high-mid)
        {
            arr[k]=r[j];
                j++;
                k++;
        }
    }
    void partition(int arr[],int low,int high)
    {
        if(low<high)
        {
            int mid=(low+high)/2;
            partition(arr,low,mid);
            partition(arr,mid+1,high);
            merge(arr,low,mid,high);
        }
    }
    void display(int arr[])
    {
        cout<<"the sorted array is"<<endl;
        for(int i=0;i<array_size;i++)
        {
            cout<<" "<<arr[i];
        }
    }

};
